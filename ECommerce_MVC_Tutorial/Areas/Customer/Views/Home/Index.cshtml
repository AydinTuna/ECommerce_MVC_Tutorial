@model IEnumerable<Product>


<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
    @foreach (var product in Model)
    {
        <div>
            <img class="h-auto max-w-full rounded-lg" src="@product.ImageUrl" alt="@product.ISBN">
            <h2>@product.Title</h2>
            <p>@product.Author</p>
            <p>List Price: @product.ListPrice.ToString("c")</p>
            <p class="mb-4">As Low As: @product.Price100.ToString("c")</p>
            <a asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">Details</a>
        </div>
    }
</div>
